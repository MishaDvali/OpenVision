{
  "manifest_version": 3,
  "name": "Text to Speech Extension",
  "version": "1.2",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "speak_page": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Speak the current page"
    },
    "stop_speaking": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Stop speaking"
    },
    "resume_speaking": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      },
      "description": "Resume speaking"
    }
  }
}
